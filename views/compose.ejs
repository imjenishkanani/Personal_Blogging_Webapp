<%- include("partials/header"); -%>

<form class="" action="/compose" method="post">
  <h1>Compose</h1>

  <div class="form-group">
    <label for="postTitle">Title</label>
    <input type="text" class="form-control" name="postTitle" autocomplete="off" required>
  </div>

  <div class="form-group">
    <label for="postBody">Post</label>
    <textarea name="postBody" class="form-control" rows="5" cols="30" required></textarea>
  </div>

    <button type="submit" class="btn btn-primary" name="button">Publish</button>
</form>

<%- include("partials/footer"); -%>
